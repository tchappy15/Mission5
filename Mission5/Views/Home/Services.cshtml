@{
    ViewData["Title"] = "Services Calculator";
}
<h1>@ViewData["Title"]</h1>

<div class="request-form">
    <label for="hours">Enter Hours Needed:</label>
    <input type="number" id="hours" min="1" required>
    <span id="error-message" style="color: red; display: none;">Please enter a positive number.</span>

    <label for="rate">Rate Per Hour:</label>
    <input type="text" id="rate" value="50" readonly> <!-- Adjust rate as needed -->

    <button id="calculate-btn">Calculate Total</button>

    <label for="total">Total Cost:</label>
    <input type="text" id="total" readonly>

    <br>
    <a asp-controller="Home" asp-action="Index">Back to Home</a>
</div>

<script src="lib/jquery/dist/jquery.min.js"></script>
<script src="js/site.js"></script>